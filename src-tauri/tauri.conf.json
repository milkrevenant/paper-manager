{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Paper Manager",
  "version": "0.1.0",
  "identifier": "com.papermanager.desktop",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Paper Manager - AI 논문 분석",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-eval' https://unpkg.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: asset: http://asset.localhost blob:; connect-src 'self' ipc: http://ipc.localhost https://unpkg.com https://api.semanticscholar.org https://accounts.google.com https://oauth2.googleapis.com https://www.googleapis.com; frame-src 'self' asset: http://asset.localhost blob:; worker-src 'self' blob: https://unpkg.com",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**/*", "$RESOURCE/**/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
